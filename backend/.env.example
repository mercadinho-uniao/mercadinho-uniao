# Variáveis de Ambiente - Copie este arquivo para .env e preencha os valores

# Banco de Dados (PostgreSQL no Render)
DB_HOST=seu_host_render
DB_PORT=5432
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_NAME=seu_banco_dados

# Servidor
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=sua_chave_secreta_aqui

# CORS
CORS_ORIGIN=http://localhost:5000,http://localhost:3000

# Pagamentos PIX
PIX_KEY=sua_chave_pix_aqui

# Email (para notificações)
EMAIL_USER=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_de_app
